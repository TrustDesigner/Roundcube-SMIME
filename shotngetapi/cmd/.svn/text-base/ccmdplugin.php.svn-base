<?php

if(isset($init_flag) == false)
	die;
	
/**
* 
**/
class CCmdPlugin extends CCmd {
	// ********************************************************************************************
	private $name;
	private $kpub;
	private $url;
	
	// ********************************************************************************************
	/**
	* Initalize the comand
	*/
	public function __construct($name, $kpub, $url) {
		parent::setValue(CCmd::CMD_PLUGIN);
		
		CDebugger::$debug->tracein('__construct', 'CCmdPlugin');
		
		$this->name = $name;
		$this->kpub = $kpub;
		$this->url = $url;
		
		CDebugger::$debug->traceout(true);
	}
	
	public function fromXml($node){
		CDebugger::$debug->tracein('fromXml', 'CCmdPlugin');
		
		$xmlName = $node->getElementsByTagName('NAME')->item(0);
		$name = utf8_decode($xmlName->firstChild->nodeValue);
		$this->name = $name;
		
		$xmlKpub = $node->getElementsByTagName('KPUB')->item(0);
		$kpub = utf8_decode($xmlKpub->firstChild->nodeValue);
		$this->kpub = $kpub;
	
		$xmlUrl = $node->getElementsByTagName('URL');
		if($xmlUrl->length == 1 && $xmlUrl->item(0)->firstChild != null)
		{
			$url = utf8_decode($xmlUrl->item(0)->firstChild->nodeValue);
			$this->url = $url;
		}
		
		CDebugger::$debug->traceout(true);
	}
	
	// ********************************************************************************************
	public function serializer(&$dom, $kpub){
		CDebugger::$debug->tracein('serializer', 'CCmdPlugin');
		
		$xmlCmd = $dom->createElement('CMD');
		$xmlCmd->setAttribute('VALUE', parent::getValue());
		
		$xmlName = $dom->createElement('NAME');
		$name = utf8_encode($this->getName());
		$xmlName->appendChild($dom->createTextNode($name));
		$xmlCmd->appendChild($xmlName);
		
		$xmlPub = $dom->createElement('KPUB');
		$kpub = utf8_encode($this->getKpub());
		$xmlPub->appendChild($dom->createTextNode($kpub));
		$xmlCmd->appendChild($xmlPub);
		
		$xmlUrl = $dom->createElement('URL');
		$url = utf8_encode($this->getUrl());
		$xmlUrl->appendChild($dom->createTextNode($url));
		$xmlCmd->appendChild($xmlUrl);
		
		CDebugger::$debug->traceout(true);
		return $xmlCmd;
	}
	
	// ********************************************************************************************
	public function getName() { return $this->name; }
	public function setName($name){ $this->name = $name; }
	
	public function getKpub() { return $this->kpub; }
	public function setKpub($kpub){ $this->kpub = $kpub; }
	
	public function getUrl() { return $this->url; }
	public function setUrl($url){ $this->url = $url; }
	
}

?>